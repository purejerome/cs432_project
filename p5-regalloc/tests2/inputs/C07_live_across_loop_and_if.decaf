// C07_live_across_loop_and_if.decaf
// Variable defined before a loop, modified inside, and used after.

def int main()
{
    int base;
    int i;
    int acc;
    int result;

    base = 2;
    i = 0;
    acc = 1;

    while (i < 4)
    {
        if (i % 2 == 0)
        {
            acc = acc * base;   // multiply on even i
        }
        else
        {
            acc = acc + base;   // add on odd i
        }
        i = i + 1;
    }

    // i == 4, acc = (((1*2)+2)*2+2) = ((4)*2+2) = 10
    result = acc + i;           // 10 + 4 = 14

    print_int(result);
    print_str("\n");

    return result;
}
