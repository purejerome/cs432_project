// W01_weird_returns.decaf
// Multiple returns in different branches and inside a loop.

def int f(int n)
{
    int r;

    if (n < 0)
    {
        r = -1;
        return r;
    }

    if (n == 0)
    {
        r = 0;
        return r;
    }

    while (n > 1)
    {
        n = n - 1;
        if (n == 2)
        {
            r = 42;
            return r;
        }
    }

    r = 1;
    return r;
}

def int main()
{
    int x;
    x = f(5);   // 5 -> 4 -> 3 -> 2 -> returns 42

    print_int(x);
    print_str("\n");

    return x;
}
