int c;

def int dec_and_pos() {
  // decrement c, return 1 while c > 0, else 0
  c = c - 1;
  if (c > 0) { return 1; } else { return 0; }
}

def int main() {
  int s;
  c = 4;  // loop should run while 4->3->2: two iterations
  s = 0;
  while (dec_and_pos()) {
    s = s + 5;
  }
  return s; // expected 10
}
